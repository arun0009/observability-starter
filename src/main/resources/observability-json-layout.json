{
    "mdc": {
        "traceId": {
            "$resolver": "mdc",
            "key": "traceId"
        },
        "spanId": {
            "$resolver": "mdc",
            "key": "spanId"
        }
    },
    "message": {
        "$resolver": "message",
        "stringified": true
    },
    "level": {
        "$resolver": "level",
        "field": "name"
    },
    "logger": {
        "$resolver": "logger",
        "field": "name"
    },
    "thread": {
        "$resolver": "thread",
        "field": "name"
    },
    "time": {
        "$resolver": "timestamp",
        "pattern": {
            "format": "yyyy-MM-dd'T'HH:mm:ss.SSS'Z'",
            "timeZone": "UTC"
        }
    },
    "exception": {
        "$resolver": "exception",
        "field": "stackTrace",
        "stackTrace": {
            "stringified": true
        }
    },
    "context": {
        "$resolver": "mdc"
    }
}